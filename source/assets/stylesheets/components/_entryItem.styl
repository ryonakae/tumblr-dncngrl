.entryItem
  &--news
    .link
      border-top 1px solid $borderColor_default
      display table
      width 100%
      height 100%
      padding 60px
      transition: all 600ms ease

    &:hover
      .link
        text-decoration none
        background-color $bgColor_inverse
        border-color $borderColor_newsHover
        color $textColor_inverse

    .info,
    .title
      display table-cell
      vertical-align top

    .info
      width 200px
      font-family $fontFamily_title
      padding-top 3px

      .date,
      .notes
        display block
        $fontSize_info

    .title
      font-family $fontFamily_default
      margin 0
      font-size $fontSize_entryBodyTitle


  &--photo
    margin 0 auto 100px
    max-width 600px
    position relative
    overflow hidden
    background-color #000

    &:hover
      .image
        // transform scale(1.05)
        transform-origin 50% 50%
        opacity 0.5

      .title
        margin-top -10px
        opacity 1

      .notes
        margin-top 40px
        opacity 1

    .link
      display block
      width 100%
      height 100%
      line-height 0

    .image
      width 100%
      height auto
      transition: all 600ms ease
      position relative
      z-index 1

    .title
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      margin 0
      line-height 1
      font-size $fontSize_entryItemTitle
      color $textColor_default
      z-index 3
      transition: all 600ms easing('out-quint')

    .notes
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      font-size $fontSize_info
      font-family $fontFamily_title
      color $textColor_default
      z-index 3
      transition: all 600ms easing('out-quint')
      transition-delay 100ms
      margin-top 60px
      opacity 0