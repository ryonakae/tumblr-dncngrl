@import '../_config'


.article
  max-width 640px
  margin 0 auto 130px auto


.article__header
  position relative


.article__title
  margin 0
  font-size $fontSize_xlarge
  padding-right 120px


.article__info
  margin-top 15px
  font-size $fontSize_small


.article__date
  display inline


.article__tag
  display inline
  margin 0
  padding 0
  list-style-type none

  li
    display inline

    &:after
      content ','
      margin-right 5px

    &:first-child
      &:before
        content 'Â·'
        margin-left 0.5em
        margin-right 0.5em

    &:last-child
      &:after
        content ''
        margin 0


.article__notes
  font-size $fontSize_small
  padding 5px 8px
  border 1px solid $color_border_default
  position absolute
  top 50%
  right 0
  transform translateY(-50%)


.article__body
  margin-top 35px

  h1, h2, h3, h4, h5, h6
    margin 1.3em 0 1em

  h1
    font-size $fontSize_xlarge

  h2
    font-size $fontSize_xlarge * 0.9

  h3
    font-size $fontSize_xlarge * 0.8

  h4
    font-size $fontSize_xlarge * 0.7

  h5
    font-size $fontSize_default

  h5
    font-size $fontSize_default
    font-weight normal

  a
    text-decoration underline

    &:hover
      color inherit
      text-decoration none

  p,ul,ol
    margin 0 0 1.2em

  ul
    padding-left 1.5em

  img
    line-height 0
    margin 0 0 1.2em
    max-width 100%
    height auto

  hr
    width 17%
    height 2px
    background-color $color_lightGray2
    border none
    margin 3.5em auto


.article__back
  margin-top 80px
  text-align center