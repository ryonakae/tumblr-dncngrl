.cloneImage
  position fixed
  visibility hidden
  // opacity 0
  pointer-events none
  background-size cover
  background-position 50% 0
  left 50%
  transform translateX(-50%)
  z-index 2
  transition: all 1000ms easing('in-out-quart')

  &.is--zoomIn
    // opacity 1 !important
    visibility visible !important
    top 0 !important
    width 100% !important
    height 100% !important