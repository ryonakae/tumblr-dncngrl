@import '../_config'


.fixedContent
  clearfix()
  opacity 0
  position fixed
  top 53%
  width 100%
  clearfix()
  font-size $fontSize_small
  line-height 1.3
  pointer-events none

  // +media-query($mq_tablet)
  //   position static
  //   background-color $color_bg_inverse
  //   padding 20px 6.7% 65px

  +media-query($mq_tablet)
    display none


.fixedContent__copyright
  float left
  margin-left -60px

  div
    display block
    width 300px
    transform rotate(90deg)

    span, a
      pointer-events auto

  // +media-query($mq_tablet)
  //   margin-left 0

  //   div
  //     width auto
  //     transform none


.fixedContent__backTop
  float right
  margin-right -65px

  div
    display block
    width 300px
    transform rotate(90deg)

    span
      transition: all 300ms ease
      cursor pointer
      pointer-events auto

      &:hover
        color $color_text_link

