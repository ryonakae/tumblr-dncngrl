.navi__toggle
  width 36px
  height 20px
  position relative
  z-index 30
  cursor pointer

  &:before,
  &:after
    content ''
    position absolute
    width 100%
    height 3px
    background-color $textColor_default
    left 0
    opacity 0
    transition: all 600ms easing('in-out-quart')

  &:before
    top 0
    transform translateX(20px)

  &:after
    bottom 0
    transform translateX(10px)

  &.is--visible
    &:before,
    &:after
      opacity 1
      transform translateX(0)


.navi__list
  transition: all 1000ms easing('in-out-quart')
  opacity 0
  visibility hidden
  position fixed
  z-index 20
  top 0
  left 0
  width 100%
  height 100%
  background rgba($bgColor_default, 0.9)
  margin 0
  padding 0

  &.is--visible
    opacity 1
    visibility visible