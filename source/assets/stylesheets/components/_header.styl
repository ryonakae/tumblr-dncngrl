.header__title
  margin 0
  position fixed
  z-index 10
  top 40px
  left 40px
  opacity 0
  visibility hidden
  transform translateX(-50px)
  transition: all 700ms easing($easing)

  &.is--visible
    opacity 1
    visibility visible
    transform translateX(0)

  a
    display block
    hide-text()
    retinaSprite($header_logo_group)
    transition: all 300ms ease

    .is-pc &
      &:hover
        opacity 0.7

  +media-query($mq_tablet)
    top 30px
    left 30px

  +media-query($mq_spLarge)
    top 20px
    left 20px
    width 36px
    overflow hidden

.header__navi
  position fixed
  z-index 10
  right 40px
  top 54px

  +media-query($mq_tablet)
    right 30px
    top 42px

  +media-query($mq_spLarge)
    right 20px
    top 32px