.header__title
  margin 0
  position fixed
  z-index 10
  top 40px
  left 40px
  opacity 0
  visibility hidden
  transform translateX(-50px)
  transition: all 600ms easing('in-out-quart')

  &.is--visible
    opacity 1
    visibility visible
    transform translateX(0)

  a
    display block
    hide-text()
    background url('/assets/images/header_logo.png') no-repeat
    width (380/2)px
    height (92/2)px
    background-size (380/2)px (92/2)px
    transition: all 300ms ease

    &:hover
      opacity 0.7

.header__navi
  position fixed
  z-index 10
  right 40px
  top 54px