.header
  clearfix()
  overflow hidden

  &:after
    content ''
    position absolute
    top 98px
    left 50%
    width 40px
    height 3px
    background-color $color_text_default
    transform translateX(-50%)


.header__bg
  position absolute
  top 0
  left 0
  width 50%
  height 600px
  background-color $color_bg_link


.header__title
  float left
  margin 80px 0 0 $margin_page

  a
    display block
    width 170px
    height 39px
    position relative

  svg
    width 100%
    height 100%
    fill $color_text_default
    position relative


.header__navi
  float right
  position relative
  clearfix()
  margin-right $margin_page


.header__link
  float left
  list-style-type none
  padding 0
  margin 90px 0 0 0
  clearfix()

.header__linkItem
  float left
  margin-left 40px
  font-weight bold


.header_sns
  float left
  list-style-type none
  padding 0
  margin 85px 0 0 40px
  clearfix()

.header__snsItem
  float left

  a
    display block
    width 30px
    height 30px
    border 1px solid $color_border_default
    position relative
    line-height 0

  svg
    position relative
    top 50%
    left 50%
    transform translate(-50%, -50%)

  &--twitter
    svg
      width 13px
      height 10px
      fill $color_text_default

  &--pixiv
    margin-left -1px

    svg
      width 11px
      height 10px
      fill $color_text_default