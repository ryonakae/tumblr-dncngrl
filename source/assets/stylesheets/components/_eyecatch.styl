.eyecatch
  pointer-events none
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index -1
  overflow hidden
  transition: all 1000ms easing($easing)

  &.is--hidden
    opacity 0

  &:after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba($bgColor_default, 0.3);

  .image
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background-repeat no-repeat
    background-position 50% 50%
    background-size cover
    transition: all 1000ms easing($easing)

    &.is--noanimation
      transition-duration 0ms

    &.is--blur
      transform scale(0.85)
      transform-origin 50% 50%
      filter blur(20px)
      opacity 0.7

    &.is--hidden
      opacity 0

    &.is--shiftLeft
      transform translateX(-25%)
      // filter blur(20px)

  .grain
    // background #fff
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    opacity 0.4
    background-image url('../images/bg_noise.gif')
    background-size 300px
    mix-blend-mode screen
    transition: all 1000ms easing($easing)

  +media-query($mq_tablet)
    .image
      &.is--shiftLeft
        transform translateX(-30%)

  +media-query($mq_spLarge)
    .image
      &.is--shiftLeft
        transform translateX(-40%)