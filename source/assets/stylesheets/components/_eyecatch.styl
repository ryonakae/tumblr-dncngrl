.eyecatch
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index -1

  &:after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba($bgColor_default, 0.6);

  .image
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background url('/assets/images/eyecatch.jpg') no-repeat 50% 50%
    background-size cover
    transition: all 1000ms easing('in-out-quart')

    &.is--blur
      transform scale(0.8)
      transform-origin 50% 50%
      filter blur(20px)
      opacity 0.5

    &.is--hidden
      opacity 0