.eyecatch
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1

  &:after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(#000, 0.6);

  &__image
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background url('/assets/images/eyecatch.jpg') no-repeat
    background-size cover
    transition: all 1000ms easing('in-out-quart')

    &--blur
      transform scale(0.8)
      transform-origin 50% 50%
      filter blur(20px)
      opacity 0.5

    &--hidden
      opacity 0