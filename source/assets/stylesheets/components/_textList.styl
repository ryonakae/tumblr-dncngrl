@import '../_config'


.textList
  margin 80px auto 0
  padding 80px 0 100px
  position relative
  text-align center

  &:before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    mask url('../images/bg.svg')
    mask-size 30px 30px
    background-color #f0f0f0
    z-index -1


.textList__items
  display inline-block
  margin 0 auto
  text-align left


.textList__item
  margin-top 55px

  &:first-child
    margin-top 0

.textList__itemTitle
  font-size $fontSize_large
  margin 0

.textList__itemInfo
  margin-top 15px
  font-size $fontSize_small
  color $color_text_sub

.textList__itemDate
  display inline

.textList__itemTag
  display inline
  margin 0
  padding 0
  list-style-type none

  li
    display inline

    &:after
      content ','
      margin-right 5px

    &:first-child
      &:before
        content 'Â·'
        margin-left 0.5em
        margin-right 0.5em

    &:last-child
      &:after
        content ''
        margin 0


.textList__more
  margin-top 70px