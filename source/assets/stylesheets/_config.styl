// font family
$fontFamily = Gotham, "Helvetica Neue", Helvetica, Arial, "小塚ゴシック Pr6N", "Kozuka Gothic Pr6N", "ヒラギノ角ゴ ProN W3", "Hiragino Kaku Gothic ProN", "メイリオ", Meiryo, sans-serif


// color
$color_white = #fff
$color_lightGray1 = #f8f8f8
$color_lightGray2 = #e5e5e5
$color_gray = #bfbfbf
$color_black = #333
$color_cyan = #76faff

$color_text_default = $color_black
$color_text_link = $color_cyan
$color_text_sub = $color_gray
$color_text_inverse = $color_white
$color_bg_default = $color_lightGray1
$color_bg_inverse = $color_white
$color_bg_link = $color_cyan
$color_border_default = $color_black
$color_border_link = $color_cyan


// font size
$fontSize_default = rem(13px)
$fontSize_small = rem(10px)
$fontSize_large = rem(16px)
$fontSize_xlarge = rem(22px)


// line height
$lineHeight_default = 1.7
$lineHeight_title = 1.4


// letter spacing
$letterSpacing = 0.04em


// width & margin
$margin_page = 80px

$width_default = 960px
$width_textList = 500px
$width_single = 640px


// media query
$mq_pcLarge = only screen, min-width 1180px
$mq_pc = only screen, max-width 1180px
$mq_tablet = only screen, max-width 960px
$mq_smartphone = only screen, max-width 640px