.index
  position relative
  width 100vw
  height 100vh

.index__title
  margin 0
  position absolute
  top 50%
  left 50%
  opacity 0
  transform translate(-50%, -50%)
  transition: opacity 700ms easing($easing)

  span
    display block
    hide-text()
    background url('../images/index_logo.png') no-repeat
    background-size cover
    width (976px/2)
    height (180px/2)

    +media-query($mq_tablet)
      width (976px/2) * 0.85
      height (180px/2) * 0.85

    +media-query($mq_spLarge)
      width (976px/2) * 0.7
      height (180px/2) * 0.7

    +media-query($mq_sp)
      width (976px/2) * 0.6
      height (180px/2) * 0.6

    +media-query($mq_spSmall)
      width (976px/2) * 0.5
      height (180px/2) * 0.5

  &.is--visible
    opacity 1

.index__more
  position absolute
  top calc('100% - 80px', 85%)
  left 50%
  opacity 0
  transform translate(-50%, 40px)
  transition: all 700ms easing($easing)
  filter blur(20px)

  &.is--visible
    opacity 1
    transform translate(-50%, 0)
    filter blur(0px)

  .is-pc &
    &:hover
      .text
        transform translateY(2px)
      .icon
        transform translate(-50%, 2px)

  .text
    display block
    font-family $fontFamily_title
    font-size $fontSize_default
    color $textColor_default
    letter-spacing 0.3em
    text-indent 0.3em
    transition: all 400ms easing($easing)

  .icon
    retinaSprite($icon_arrow_group)
    position relative
    left 50%
    transform translateX(-50%)
    margin-top 10px
    transition: all 400ms easing($easing)