.index__title
  hide-text()
  margin 0
  position absolute
  top 50%
  left 50%
  background url('../images/index_logo.png') no-repeat
  background-size (1060/2)px (246/2)px
  width (1060/2)px
  height (246/2)px
  opacity 0
  transform translate(-50%, -50%)
  transition: opacity 600ms easing('in-out-quart')
  transform-origin 50% 50%

  &.is--visible
    opacity 1

  +media-query($mq_tablet)
    width 412px
    height 100px
    background-size 412px 100px

  +media-query($mq_spLarge)
    width 300px
    height 73px
    background-size 300px 73px

  +media-query($mq_sp)
    width 260px
    height 63px
    background-size 260px 63px

.index__more
  position absolute
  top calc('100% - 80px', 85%)
  left 50%
  opacity 0
  transform translate(-50%, 50px)
  transition: all 600ms easing('in-out-quart')
  filter blur(20px)

  &.is--visible
    opacity 1
    transform translate(-50%, 0)
    filter blur(0px)

  .is-pc &
    &:hover
      .icon
        margin-top 3px

  .text
    display block
    font-family $fontFamily_title
    font-size $fontSize_default
    color $textColor_default
    letter-spacing 0.3em
    text-indent 0.3em

  .icon
    retinaSprite($icon_arrow_group)
    position relative
    left 50%
    transform translateX(-50%)
    margin-top 10px
    transition: margin-top 100ms ease