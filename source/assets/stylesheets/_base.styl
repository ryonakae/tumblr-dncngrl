@import 'kouto-swiss'

@import '_config'

normalize()
box-sizing-reset()

// font-face
font-face('Gotham', '../fonts/Gotham-Book', normal, normal, formats:woff)
font-face('Gotham', '../fonts/Gotham-Medium', bold, normal, formats:woff)

body
  font-family $fontFamily
  font-size $fontSize_default
  background-color $color_bg_default
  color $color_text_default
  line-height $lineHeight_default
  letter-spacing $letterSpacing
  text-rendering optimizeLegibility
  position relative
  overflow-x hidden

  +retina-query( only screen, 2 )
    -webkit-font-smoothing antialiased


a
  transition: all 300ms ease
  color inherit
  text-decoration none

  &:hover
    color $color_text_link
    opacity 0.7


h1, h2, h3, h4, h5, h6
  line-height $lineHeight_title