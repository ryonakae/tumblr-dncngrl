@import 'kouto-swiss'

body
  background-color #000
  color #fff
  margin 0
  padding 0


.header
  position fixed
  top 0
  left 0
  z-index 10

.eyecatch
  position fixed
  top 0
  left 0
  width 100vw
  height 100vh
  z-index -1

  &__image
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background url('/assets/images/eyecatch.jpg') no-repeat
    background-size cover
    transition: all 1000ms easing('in-out-quart')

    &--blur
      transform scale(0.8)
      transform-origin 50% 50%
      filter blur(20px)
      opacity 0.5


.top
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  margin-bottom 100px

  &__title
    margin 0
    position absolute
    top 50%
    left 0
    width 100%
    transform translateY(-50%)
    line-height 0
    font-size 110px
    text-align center

    span
      display block
      opacity 0
      transform scale(1.1)
      transition: all 600ms easing('in-out-quart')

    &--active
      span
        opacity 1
        transform scale(1)

  &__button
    position absolute
    bottom 50px
    left 50%
    transform translateX(-50%)


.archive
  margin-top 100px
  position relative
  width 100%
  height 100vh

  &__title
    line-height 1
    margin 0
    position absolute
    top 50%
    left 0
    width 100%
    text-align center
    font-size 110px
    transform translateY(-50%)

    span
      display block
      opacity 0
      transform scale(1.1)
      transition: all 600ms easing('in-out-quart')

    &--active
      span
        opacity 1
        transform scale(1)

  &__content
    position absolute
    top 50%
    left 0
    width 100%
    margin-top 150+(110/2)px


.postList
  opacity 0
  max-width 700px
  list-style-type none
  margin 0 auto
  padding 0
  transition: all 600ms easing('out-quint')
  transform translateY(100px)

  &--visible
    opacity 1
    transform translateY(0)

  &__item
    margin-top 100px
    position relative
    overflow hidden
    background-color #000

    &:first-child
      margin-top 0

    &Image
      width 100%
      height auto
      line-height 0
      transition: all 600ms easing('in-out-quart')

    &Title
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      margin 0
      line-height 1
      font-size 70px

    &:hover
      .postList__item
        &Image
          transform scale(1.05)
          transform-origin 50% 50%
          filter blur(10px)
          opacity 0.7