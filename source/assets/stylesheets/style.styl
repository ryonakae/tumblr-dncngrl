@import 'kouto-swiss'

body
  background-color #000
  color #fff


.eyecatch
  width 100vw
  height 50vh
  position relative
  z-index -1

  &__image
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    background url('/assets/images/eyecatch.jpg') no-repeat
    background-size cover
    transition: all 1000ms easing('in-out-quart')

    &--blur
      transform scale(0.8)
      transform-origin 50% 50%
      filter blur(20px)
      opacity 0.5


.postList
  opacity 0