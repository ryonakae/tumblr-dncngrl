{
  "plugins": [
    "html"
  ],

  "parser": "babel-eslint",

  "extends": [ "eslint:recommended" ],

  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true
  },
  "rules": {
    "strict": 0,
    "semi": 2,
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [2, "single"],
    "object-curly-spacing": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "keyword-spacing": [2, {
      "before": true,
      "after": true
    }],
    "brace-style": [2, "stroustrup", {
      "allowSingleLine": true
    }],
    "no-console": 0,
    "no-var": 2,
    "no-unused-vars": 0,
    "no-undef": 0,
    "no-new-require": 2,
    "no-multiple-empty-lines": [2, {
      "max": 2
    }],
    "no-multi-spaces": [2, {
      "exceptions": {
        "Property": true,
        "ImportDeclaration": true,
        "VariableDeclarator": true,
        "AssignmentExpression": true
      }
    }],
  },

  "ecmaFeatures": {
    "jsx": true
  }
}